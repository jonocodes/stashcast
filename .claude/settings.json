{
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "./bootstrap-web.sh && ./setup.sh --with-packages"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit|Write|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "ruff format 2>/dev/null; ruff check --fix --unsafe-fixes 2>/dev/null || true"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/quality-check.sh"
                    }
                ]
            }
        ]
    }
}